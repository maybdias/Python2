class Livro:
    def __init__(self, titulo, autor):
        self.__titulo = titulo
        self.__autor = autor

    def get_titulo(self):
        return self.__titulo

    def get_autor(self):
        return self.__autor


class Biblioteca:
    def __init__(self):
        self.__livros = []
        self.__contador = 0

    def adicionar_livro(self, livro):
        if not isinstance(livro, Livro):
            print("O objeto adicionado deve ser uma instância da classe Livro.")
            return
        self.__livros.append(livro)
        self.__contador += 1

    def remover_livro(self, titulo):
        for livro in self.__livros:
            if livro.get_titulo() == titulo:
                self.__livros.remove(livro)
                self.__contador -= 1
                return
        print(f"Livro com título '{titulo}' não encontrado.")

    def listar_livros(self):
        if not self.__livros:
            print("Nenhum livro na biblioteca.")
        else:
            for livro in self.__livros:
                print(f"Título: {livro.get_titulo()}, Autor: {livro.get_autor()}")

    def get_contador(self):
        return self.__contador


# Exemplo de uso:
livro1 = Livro("Dom Casmurro", "Machado de Assis")
livro2 = Livro("O Primo Basílio", "José de Alencar")

biblioteca = Biblioteca()
biblioteca.adicionar_livro(livro1)
biblioteca.adicionar_livro(livro2)

print(f"Contador de livros: {biblioteca.get_contador()}")  # Saída: 2

biblioteca.listar_livros()

biblioteca.remover_livro("Dom Casmurro")
print(f"Contador de livros: {biblioteca.get_contador()}")  # Saída: 1

biblioteca.listar_livros()
